{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb", "plugin:@next/next/recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": "off",
    "react/prop-types": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["@/*", "./*"]],
        "extensions": [".js", ".jsx", ".json"]
      }
    }
  }
}
